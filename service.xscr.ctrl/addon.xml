<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.xscr.ctrl"
       name="XScreenSaver control service"
       version="0.0.1"
       provider-name="ssglabs">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
  </requires>
  <extension point="xbmc.service"
             library="default.py" start="login|startup">
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">XScreenSaver control service</summary>
    <description lang="en">Uses dbus and xset to disable the screensaver and dpms while playing video, and reenables them when idle.</description>
    <platform>linux</platform>
  </extension>
</addon>
